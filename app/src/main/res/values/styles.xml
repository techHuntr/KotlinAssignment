<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextBlackBoltStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlackNormalStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextPurpleBoltStyle">
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPurpleBoltStyle.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBlackBoltStyle.Size16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBlackNormalStyle.Size16">
        <item name="android:textSize">16sp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        style="@style/TextBlackNormalStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/date/ddmmyy" />

    <ImageView
        android:id="@+id/iv_work_image"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_work_type"
        style="@style/TextPurpleBoltStyle.Size14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/iv_work_image"
        app:layout_constraintStart_toStartOf="@+id/iv_work_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_work_image"
        tools:text="sdsas dasd" />

    <TextView
        android:id="@+id/tv_work_name"
        style="@style/TextBlackBoltStyle.Size16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:maxLines="1"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_work_type"
        app:layout_constraintStart_toStartOf="@+id/tv_work_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_type"
        tools:text="RTfsdf EREWDFdfs fsdf sdfsdfs" />

    <TextView
        android:id="@+id/tv_work_time"
        style="@style/TextBlackNormalStyle.Size16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_work_name"
        app:layout_constraintStart_toStartOf="@+id/tv_work_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_name"
        tools:text="00:00" />

    <TextView
        android:id="@+id/tv_work_price"
        style="@style/TextBlackBoltStyle.Size16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chip_background"
        android:fontFamily="sans-serif-black"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_work_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_work_image"
        tools:text="16.00" />


</androidx.constraintlayout.widget.ConstraintLayout>